{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "chatbot": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Deployment name"
        },
        "image": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "description": "Image repository"
            },
            "tag": {
              "type": "string",
              "minLength": 1,
              "description": "Image tag"
            },
            "pullPolicy": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["name", "tag"],
          "additionalProperties": false
        },
        "replicas": {
          "type": "integer",
          "description": "Kubernetes number of pod replicas"
        },
        "resources": {
          "type": "object",
          "description": "Kubernetes resource requests and limits"
        },
        "envSecret": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the chatbot api kubernetes secret"
        },
        "sharedEnvSecret": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the basedosdados api kubernetes secret"
        },
        "sharedDatabase": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "minLength": 1,
              "description": "Database host"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Database port"
            },
            "name": {
              "type": "string",
              "minLength": 1,
              "description": "Database name"
            },
            "user": {
              "type": "string",
              "minLength": 1,
              "description": "Database user"
            },
            "passwordSecret": {
              "type": "string",
              "minLength": 1,
              "description": "Name of the kubernetes secret containing the database password"
            }
          },
          "required": [
              "host",
              "port",
              "name",
              "user",
              "passwordSecret"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "image",
        "envSecret",
        "sharedEnvSecret",
        "sharedDatabase"
      ],
      "additionalProperties": false
    }
  },
  "required": ["chatbot"],
  "additionalProperties": false
}
