{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "chatbot": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Deployment name"
        },
        "image": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "description": "Image repository"
            },
            "tag": {
              "type": "string",
              "minLength": 1,
              "description": "Image tag"
            },
            "pullPolicy": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["name", "tag"],
          "additionalProperties": false
        },
        "replicas": {
          "type": "integer",
          "description": "Kubernetes number of pod replicas"
        },
        "resources": {
          "type": "object",
          "description": "Kubernetes resource requests and limits"
        },
        "envConfigMap": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the ConfigMap containing non-sensitive env variables"
        },
        "envSecret": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the chatbot api kubernetes secret"
        },
        "envSharedSecret": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the basedosdados api kubernetes secret"
        }
      },
      "required": [
        "image",
        "envConfigMap",
        "envSecret",
        "envSharedSecret"
      ],
      "additionalProperties": false
    }
  },
  "required": ["chatbot"],
  "additionalProperties": false
}
